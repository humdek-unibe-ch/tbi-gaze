<Window x:Class="CustomCalibrationLibrary.Views.DriftCompensationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:CustomCalibrationLibrary.Views"
        mc:Ignorable="d"
        Title="DriftCompensation" Height="450" Width="800">
    <Grid>
        <Canvas Background="Black" Height="{x:Static SystemParameters.PrimaryScreenHeight}" Width="{x:Static SystemParameters.PrimaryScreenWidth}">
            <uc:CalibrationPoint DataContext="{Binding FixationPoint}" />
        </Canvas>
    </Grid>
</Window>
