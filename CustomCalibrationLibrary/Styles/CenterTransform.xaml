<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converter="clr-namespace:CustomCalibrationLibrary.Converters">
    <converter:CenterConverter x:Key="CenterConverter" />
    <Style x:Key="CenterTransform" TargetType="Shape">
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform
                    X="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Shape}}, Converter={StaticResource CenterConverter}}"
                    Y="{Binding Path=ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Shape}}, Converter={StaticResource CenterConverter}}"
                />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>